<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="OtusDomainMongo" transaction-type="JTA">
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

        <class>br.org.domain.email.EmailSender</class>
        <class>br.org.domain.projects.Project</class>
        <class>br.org.domain.repository.Repository</class>
        <class>br.org.domain.system.SystemConfig</class>
        <class>br.org.domain.user.User</class>
        <class>br.org.domain.auditor.Auditor</class>
        <class>br.org.domain.auditor.LogEntry</class>

        <properties>
            <property name="hibernate.transaction.jta.platform"
                      value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform"/>
            <property name="hibernate.ogm.datastore.database" value="otus-domain"/>
            <property name="hibernate.ogm.datastore.host" value="${database.host}"/>
            <property name="hibernate.ogm.datastore.provider" value="mongodb"/>
            <property name="hibernate.ogm.datastore.port" value="${database.port}"/>
            <property name="hibernate.ogm.datastore.create_database" value="true"/>
            <property name="hibernate.ogm.datastore.username" value="${database.username}"/>
            <property name="hibernate.ogm.datastore.password" value="${database.password}"/>
        </properties>
    </persistence-unit>
</persistence>
